@model IEnumerable<PhotoCritic.Models.Photo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hidden)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommentsEnabled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalLikes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalDislikes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ImageName)
        </td>
        <td>
            <img src="@Url.Content(item.ImagePath)" height="250"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hidden)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommentsEnabled)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalLikes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalDislikes)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
